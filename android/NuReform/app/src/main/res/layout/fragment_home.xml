<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:layoutDirection="rtl"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Progress Bar -->
        <FrameLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.NuReform.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/contentGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->

            <!-- Main Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_gradient"
                android:fitsSystemWindows="true"
                android:paddingHorizontal="20dp"
                android:paddingTop="48dp"
                android:paddingBottom="24dp">

                <!-- Logout Button -->
                <ImageButton
                    android:id="@+id/btnLogout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circular_button_background"
                    android:contentDescription="@string/logout"
                    android:padding="20dp"
                    android:src="@drawable/logout"
                    app:layout_constraintBottom_toBottomOf="@id/tvWelcome"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvWelcome" />

                <!-- Welcome Section -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/welcome_user"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnLogout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="שלום, יוסי!" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Quick Actions Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="פעולות"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Grid of Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1: Add Nurses + Nurses Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAddNurses"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/secondary_turquoise_light">

                            <LinearLayout
                                android:id="@+id/btnAddNurses"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@android:drawable/ic_input_add"
                                    app:tint="@color/secondary_turquoise" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/add_nurses"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNursesDetails"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/secondary_turquoise_light">

                            <LinearLayout
                                android:id="@+id/btnNursesDetails"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@android:drawable/ic_menu_info_details"
                                    app:tint="@color/secondary_turquoise" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/nurses_details"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Row 2: Nurses Requests + Delete Nurse -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNursesRequests"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/secondary_turquoise_light">

                            <LinearLayout
                                android:id="@+id/btnNursesRequests"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@android:drawable/ic_menu_recent_history"
                                    app:tint="@color/secondary_turquoise" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/nurses_requests"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDeleteNurse"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:rippleColor="@color/error">

                            <LinearLayout
                                android:id="@+id/btnDeleteNurse"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:src="@android:drawable/ic_menu_delete"
                                    app:tint="@color/error" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/delete_nurse"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Row 3: Weekly Shifts (Full Width) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardWeeklyShifts"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:rippleColor="@color/secondary_turquoise_light">

                        <LinearLayout
                            android:id="@+id/btnWeeklyShifts"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="8dp"
                                android:src="@android:drawable/ic_menu_week"
                                app:tint="@color/secondary_turquoise" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/weekly_shifts"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

