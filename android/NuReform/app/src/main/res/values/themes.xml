<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NuReform" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_dark_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_turquoise</item>
        <item name="colorSecondaryVariant">@color/secondary_turquoise_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color - Transparent to show gradient behind -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.NuReform.Button</item>

        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.NuReform.TextInputLayout</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.NuReform.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary_turquoise</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.NuReform.Button.Primary" parent="Widget.NuReform.Button">
        <item name="backgroundTint">@color/primary_dark_blue</item>
    </style>

    <style name="Widget.NuReform.Button.Secondary" parent="Widget.NuReform.Button">
        <item name="backgroundTint">@color/secondary_turquoise</item>
    </style>

    <style name="Widget.NuReform.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_dark_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/primary_dark_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Input Styles -->
    <style name="Widget.NuReform.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_dark_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/secondary_turquoise</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="endIconTint">@color/secondary_turquoise</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="Widget.NuReform.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/secondary_turquoise</item>
    </style>

    <!-- Text Styles -->
    <!-- Base TextAppearance style -->
    <style name="TextAppearance.NuReform" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NuReform.Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NuReform.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NuReform.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.NuReform.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>

